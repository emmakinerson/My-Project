	journal = {Nature Communications},
	author = {Ruan, Yang and Kuzyakov, Yakov and Liu, Xiaoyu and Zhang, Xuhui and Xu, Qicheng and Guo, Junjie and Guo, Shiwei and Shen, Qirong and Yang, Yunfeng and Ling, Ning},
	month = jan,
	year = {2023},
	note = {Publisher: Nature Publishing Group},
	keywords = {Environmental microbiology, Microbial ecology, Stable isotope analysis},
	pages = {391},
	file = {Full Text PDF:C\:\\Users\\emmae\\Zotero\\storage\\Q9NN3IQ7\\Ruan et al. - 2023 - Elevated temperature and CO2 strongly affect the growth strategies of soil bacteria.pdf:application/pdf},
