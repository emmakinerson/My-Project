	journal = {Microbiological Research},
	author = {Fincheira, Paola and Quiroz, Andrés and Tortella, Gonzalo and Diez, María Cristina and Rubilar, Olga},
	month = jun,
	year = {2021},
	keywords = {Plant growth, Action mechanisms, Challenges, Microorganisms, Volatile organic compounds (VOCs)},
