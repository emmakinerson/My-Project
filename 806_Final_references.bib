	number = {1},
	urldate = {2024-12-02},
	journal = {Nature Communications},
	author = {Scheuerl, Thomas and Hopkins, Meirion and Nowell, Reuben W. and Rivett, Damian W. and Barraclough, Timothy G. and Bell, Thomas},
	month = feb,
	year = {2020},
	note = {Publisher: Nature Publishing Group},
	keywords = {Microbial ecology, Community ecology, Evolutionary ecology, Experimental evolution},
	pages = {754},
	file = {Full Text PDF:C\:\\Users\\emmae\\Zotero\\storage\\ST6NI8AX\\Scheuerl et al. - 2020 - Bacterial adaptation is constrained in complex communities.pdf:application/pdf},
}

